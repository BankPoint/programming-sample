@{
    ViewData["Title"] = "Loan Listing";
}

<div class="text-center">
  <h1 class="display-4">Loan Listing</h1>
  <div>
    <table class="table table-hover mt-5">
      <thead>
      <tr>
        <th scope="col">Loan Number</th>
        <th scope="col">Customer Name</th>
        <th scope="col">Principal</th>
        <th scope="col">Maturity Date</th>
        <th scope="col">Branch</th>
      </tr>
      </thead>
      <tbody data-bind="foreach: items">
      <tr>
        <td data-bind="text: loanNumber"></td>
        <td data-bind="text: customerName"></td>
        <td data-bind="text: principal"></td>
        <td data-bind="text: maturityDate"></td>
        <td data-bind="text: branchName"></td>
      </tr>
      </tbody>
    </table>
      <ul class="pagination">
        <li class="page-item"><a class="page-link" href="#">Previous</a></li>
        <li class="page-item"><a class="page-link" href="#">Next</a></li>
      </ul>
  </div>
</div>



<script type="text/javascript" src="/js/loanList.js" asp-append-version="true"></script>


